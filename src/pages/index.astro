			<!-- Others -->
			<li class="basis-full font-semibold text-gray-600 mt-4">Other</li>
			<li class="flex items-center gap-2">
				<iconify-icon icon="simple-icons:figma" width="20"></iconify-icon> Figma
			</li>
			<li class="flex items-center gap-2">
				<iconify-icon icon="simple-icons:adobepremierepro" width="20"></iconify-icon> Premiere Pro
			</li>
			<li class="flex items-center gap-2">
				<iconify-icon icon="simple-icons:canva" width="20"></iconify-icon> Canva
