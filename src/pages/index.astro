  <section class="max-w-[65ch] mx-auto px-4 sm:px-8 py-16 space-y-24">

    <!-- Who Am I -->
    <div class="flex flex-col lg:flex-row gap-12 items-start">
      <div class="flex-1">
        <h2 class="text-3xl font-bold mb-4 text-balance">Who Am I?</h2>
